{
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@context/*": ["src/context/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": ["vite.config.ts"]
}
